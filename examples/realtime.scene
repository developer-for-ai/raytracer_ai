# Real-time optimized scene
camera 0 2 8 0 0 0 0 1 0 45 1.5

# Ambient lighting
ambient 0.05 0.05 0.1

# Materials (simplified for real-time)
material ground lambertian 0.5 0.5 0.5
material red_sphere lambertian 0.8 0.2 0.2
material metal_sphere metal 0.8 0.6 0.2 0.1
material glass_sphere dielectric 1.0 1.0 1.0 1.5
material light emissive 2 2 2

# Ground
sphere 0 -1000 0 1000 ground

# Main objects (fewer for real-time performance)
sphere -2 0 -2 0.5 red_sphere
sphere 0 0 -2 0.5 metal_sphere
sphere 2 0 -2 0.5 glass_sphere

# Practical light sources
sphere -3 3 -1 0.3 light
sphere 3 3 -1 0.3 light

# Main point lights (simple for real-time performance)
point_light -3 3 -1 2.5 2.5 2.5 0.1
point_light 3 3 -1 2.5 2.5 2.5 0.1
