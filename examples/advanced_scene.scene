# Advanced scene with various materials and lighting
camera 3 3 2 0 0 -1 0 1 0 45 1.5

# Ambient lighting
ambient 0.05 0.05 0.1

# Materials
material ground lambertian 0.5 0.5 0.5
material center_sphere dielectric 1.0 1.0 1.0 1.5
material left_sphere lambertian 0.4 0.2 0.1
material right_sphere metal 0.7 0.6 0.5 0.0
material fuzzy_metal metal 0.8 0.8 0.9 0.3
material light_sphere emissive 2 2 2

# Ground
sphere 0 -1000 -1 1000 ground

# Main spheres
sphere 0 0 -1 0.5 center_sphere
sphere -1 0 -1 0.5 left_sphere  
sphere 1 0 -1 0.5 right_sphere
sphere 2.5 0 -1 0.5 fuzzy_metal

# Small glass marbles
sphere -0.5 -0.3 -0.5 0.2 center_sphere
sphere 0.5 -0.3 -0.5 0.2 center_sphere
sphere 0 -0.3 -1.5 0.2 center_sphere

# Back wall (plane)
plane 0 0 -3 0 0 1 ground

# Practical light sphere
sphere 0 4 1 0.2 light_sphere

# Point lights for main illumination
point_light -2 3 0 4.0 1.5 1.5 0.3    # Warm key light
point_light 2 3 -2 1.5 1.5 4.0 0.2    # Cool fill light

# Spot light for dramatic accent
spot_light 3 5 2 -1 -1 -1 3.0 3.0 2.0 15 30 0.1

# Soft area light for overall illumination
area_light 0 6 2 0 -1 -0.3 1 0 0 2.0 2.0 2.5 3 2 4
