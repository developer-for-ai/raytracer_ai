# Enhanced scene with different light types
camera 0 2 8 0 0 0 0 1 0 45 1.5
background 0.1 0.1 0.2
ambient 0.05 0.05 0.1

# Materials
material ground lambertian 0.5 0.5 0.5
material red_sphere lambertian 0.8 0.2 0.2
material metal_sphere metal 0.8 0.6 0.2 0.1
material glass_sphere dielectric 1.0 1.0 1.0 1.5

# Objects
sphere 0 -1000 0 1000 ground

# Main objects
sphere -2 0 -2 0.8 red_sphere
sphere 0 0 -2 0.8 metal_sphere
sphere 2 0 -2 0.8 glass_sphere

# Lights
# Point light (sun-like)
point_light 5 8 5 2.0 2.0 1.8 0.1

# Spot light (focused beam)
spot_light -5 5 0 1 -1 -1 1.5 1.0 0.8 15 45 0.05

# Area light (soft studio lighting)
area_light 0 6 2 0 -1 0 1 0 0 0.8 0.8 1.0 3 2 8
